---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { AuthModal } from "@/components/Auth/AuthModal";
import { Toaster } from "sonner";
import "../styles/global.css";

interface Props {
  title: string;
  mainClass?: string;
  hideFooter?: boolean;
  headerPosition?: "sticky" | "absolute";
  headerVariant?: "light" | "dark";
}

const {
  title,
  mainClass = "flex-grow",
  hideFooter = false,
  headerPosition,
  headerVariant,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-background text-foreground flex min-h-screen flex-col">
    <Header position={headerPosition} variant={headerVariant} />
    <main class:list={[mainClass]}>
      <slot />
    </main>
    {!hideFooter && <Footer />}
    <AuthModal client:load />
    <Toaster richColors client:load />
    <style is:global>
      :root {
        --header-height: 4rem; /* 64px */
      }
    </style>
  </body>
</html>
